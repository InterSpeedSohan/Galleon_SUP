<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="0dp"
        android:layout_height="@dimen/_200sdp"
        android:background="@drawable/ic_login_page_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv" />


    <EditText
        android:id="@+id/edtid"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/text_view_light_ash"
        android:hint="আই ডি"
        android:paddingLeft="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/ash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv"
        app:layout_constraintVertical_bias="0.55" />

    <EditText
        android:id="@+id/edtpass"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_view_light_ash"
        android:hint="পাসওয়ার্ড"
        android:inputType="textPassword"
        android:paddingLeft="10sp"
        android:textColor="@color/black"
        android:textColorHint="@color/ash"
        app:layout_constraintEnd_toEndOf="@+id/edtid"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edtid"
        app:layout_constraintTop_toBottomOf="@+id/edtid" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnlogin"
        android:layout_width="@dimen/submit_btn_size"
        android:layout_height="@dimen/submit_btn_size"
        android:layout_marginBottom="32dp"
        android:background="@drawable/ic_submit_default"
        android:foreground="?selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>