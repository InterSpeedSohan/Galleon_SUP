<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Routes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#08839b</item>
        <item name="colorPrimaryVariant">#58CAE1</item>
        <item name="colorOnPrimary">#80BFCC</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#08839b</item>
        <item name="colorSecondaryVariant">#58CAE1</item>
        <item name="colorOnSecondary">#80BFCC</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Routes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Routes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Routes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>